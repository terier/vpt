{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Linear filter",
      "children": [
        {
          "type": "checkbox",
          "bind": "filter",
          "checked": true
        }
      ]
    },
    {
      "type": "field",
      "label": "Resolution",
      "children": [
        {
          "type": "spinner",
          "bind": "resolution",
          "min": 1,
          "max": 4096,
          "value": 1024
        }
      ]
    },
    {
      "type": "field",
      "label": "Scale",
      "children": [
        {
          "type": "vector",
          "bind": "scale",
          "value": { "x": 1, "y": 1, "z": 1 },
          "step": 0.02
        }
      ]
    },
    {
      "type": "field",
      "label": "Translation",
      "children": [
        {
          "type": "vector",
          "bind": "translation",
          "value": { "x": 0, "y": 0, "z": 0 },
          "step": 0.1
        }
      ]
    }
  ]
}
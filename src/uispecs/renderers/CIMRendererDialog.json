// #package uispecs

// #section CIMRendererDialog

{
  "type": "panel",
  "children": [
    {
      "type": "field",
      "label": "Steps:",
      "children": [
        {
          "type": "spinner",
          "bind": "steps",
          "value": 300,
          "min": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Opacity:",
      "children": [
        {
          "type": "spinner",
          "bind": "opacity",
          "logarithmic": true,
          "value": 100,
          "min": 0,
          "step": 0.1
        }
      ]
    },
    {
      "type": "field",
      "label": "Volume to Light Volume ratio:",
      "children": [
        {
          "type": "spinner",
          "bind": "ratio",
          "value": 1,
          "min": 1,
          "step": 1
        }
      ]
    },
    {
      "type": "field",
      "label": "Half Float",
      "children": [
        {
          "type": "checkbox",
          "bind": "half_float",
          "checked": false
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Monte Carlo",
      "children": [
        {
          "type": "field",
          "label": "Ray steps:",
          "children": [
            {
              "type": "spinner",
              "bind": "ray_steps",
              "value": 1,
              "min": 1,
              "step": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "Extinction:",
          "children": [
            {
              "type": "spinner",
              "bind": "extinction_MS",
              "value": 100,
              "min": 0,
              "step": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "Scattering bias:",
          "children": [
            {
              "type": "slider",
              "bind": "bias_MS",
              "value": 0,
              "min": -1,
              "max": 1,
              "step": 0.2
            }
          ]
        },
        {
          "type": "field",
          "label": "Majorant ratio:",
          "children": [
            {
              "type": "slider",
              "bind": "majorant_ratio",
              "value": 1,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Max bounces:",
          "children": [
            {
              "type": "spinner",
              "bind": "bounces_MS",
              "value": 1,
              "min": 0
            }
          ]
        },
        {
          "type": "field",
          "label": "Enable MC",
          "children": [
            {
              "type": "checkbox",
              "bind": "mc_enabled",
              "checked": true
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "ISO",
      "children": [
        {
          "type": "field",
          "label": "Isovalue:",
          "children": [
            {
              "type": "spinner",
              "bind": "isovalue",
              "value": 0.5,
              "min": 0,
              "max": 1,
              "step": 0.1
            }
          ]
        },
        {
          "type": "field",
          "label": "Color:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "color",
              "value": "#ddeeff"
            }
          ]
        },
        {
          "type": "field",
          "label": "Light direction:",
          "children": [
            {
              "type": "vector",
              "bind": "direction",
              "value": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "P:",
          "children": [
            {
              "type": "spinner",
              "bind": "p",
              "value": 100,
              "min": 0,
              "step": 1
            }
          ]
        },
        {
          "type": "field",
          "label": "Shader Type:",
          "children": [
            {
              "type": "dropdown",
              "bind": "shader_type",
              "options": [
                {
                  "value": 0,
                  "label": "None",
                  "selected": false
                },
                {
                  "value": 1,
                  "label": "Lambert",
                  "selected": false
                },
                {
                  "value": 2,
                  "label": "Phong",
                  "selected": false
                },
                {
                  "value": 3,
                  "label": "BRDF",
                  "selected": true
                }
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "BRDF:",
      "contracted": "true",
      "children": [
        {
          "type": "field",
          "label": "Metallic:",
          "children": [
            {
              "type": "slider",
              "bind": "metalic",
              "value": 0,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        },
        {
          "type": "field",
          "label": "f90:",
          "children": [
            {
              "type": "color-chooser",
              "bind": "f90",
              "value": "#ffffff"
            }
          ]
        },
        {
          "type": "field",
          "label": "Specular Weight:",
          "children": [
            {
              "type": "slider",
              "bind": "specularWeight",
              "value": 1.0,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        },
        {
          "type": "field",
          "label": "Alpha Roughness:",
          "children": [
            {
              "type": "slider",
              "bind": "alphaRoughness",
              "value": 0.08,
              "min": 0,
              "max": 1,
              "step": 0.05
            }
          ]
        }
      ]
    },
    {
      "type": "accordion",
      "label": "Transfer function",
      "children": [
        {
          "type": "panel",
          "bind": "tfcontainer"
        }
      ]
    }
  ]
}